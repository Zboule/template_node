{
  "name": "template_node",
  "version": "1.0.0",
  "description": "A template for node express server",
  "scripts": {
    "start": "ts-node src/server.ts",
    "startDev": "nodemon -e ts -w ./src -x 'ts-node src/server.ts'",
    "startTest": "nodemon -e ts -w ./src  -w ./tests -x 'npm run test'",
    "test": "mocha --require ts-node/register -r tsconfig-paths/register tests/**.test.ts --timeout 5000"
  },
