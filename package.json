    "@types/node-fetch": "^1.6.7",
    "@types/reflect-metadata": "^0.1.0",
    "axios": "0.17.1",
    "chai": "^4.1.2",
    "express": "^4.16.2",
    "node-fetch": "^1.7.3",
    "nodemon": "^1.14.10",
    "npm": "5.6.0",
    "ts-loader": "^3.2.0",
    "ts-node": "^4.1.0",
    "tslint": "^5.9.1",
    "typescript": "^2.6.2"
  }
